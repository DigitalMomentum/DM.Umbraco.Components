@model DM.MemberLogin.Models.MemberStatusModel

@*
	Usage:
		By Default this component only shows "Log Out" when your logged in.
		To Show a login button, call the partial like this:

		@Html.Partial("MemberLogin/MemberStatus", new DM.MemberLogin.Models.MemberStatusModel() {
					LoginUrl = "/Login"
				})

*@

@if (User.Identity.IsAuthenticated) {
	@Html.ActionLink("Log out", "Logout", "Login")
} else {
	if (!String.IsNullOrEmpty(Model.LoginUrl)) {
		<a href="@Model.LoginUrl">Login</a>

	}
}
